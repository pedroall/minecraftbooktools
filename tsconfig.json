{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2020",
    "allowJs": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "rootDir": "src",
    "outDir": "scripts",
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "./**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "scripts",
    "pdfjs"
  ]
}